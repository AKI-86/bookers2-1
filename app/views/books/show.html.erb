<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image.jpg', size: "100x100" %>
        <% end %>
      <table class = "table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
        </tbody>
      </table>
    <%= link_to "Edit", edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %>

      <h2>New Books</h2>
      <%= render 'book', book: @booknew %>

</div>

   <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class =tableusershow>
      <tr>
        <td>
          <% if @book.user.profile_image.attached? %>
            <%= image_tag @book.user.profile_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image.jpg', size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book)%></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
        <% end %>
        </tr>
        <tr>
          <td><%= link_to @book.user.name, user_path(@book.user) %></td>
        </tr>
    </table>
    </div>
  </div>
</div>