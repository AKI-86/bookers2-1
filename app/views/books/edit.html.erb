<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, method: :patch do |f| %>

        <p>Title</p>
        <%= f.text_field :title, value: @book.title %>

        <p>Opinion</p>
        <%= f.text_area :body, value: @book.body %></br>

        <%= f.submit 'Update User' %></br>
        <%= link_to "Show",book_path %>
        |
        <%= link_to "Back",books_path %>
      <% end %>
    </div>
  </div>
</div>
