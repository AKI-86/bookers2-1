<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <h2>User info</h2>
     
      <% if @user.present? && @user.image.attached? %> <%# エラーが出たためこのように記載%>
        <%= image_tag @user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'default-image.jpg', size: "100x100" %>
      <% end %>

     <table class = "table">
        <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        <tr>

        </tr>
        </tbody>
      </table>
      <div class="btn btn-outline-secondary btn-block">edit</div>

     <h2>New Books</h2>
     <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       
       <h4>Opinion</h4>
       <%= f.text_area :body %></br>

       <%= f.submit 'Create Book' %>
     <% end %>

   </div>
   
   <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>

            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
   </div>
  </div>
</div>
